
@{
    ViewBag.Title = "SearchReSources";
    Layout = "";
}
<form method="post" action="/RiSources/getReSourcesFiles" enctype="multipart/form-data">
    <div ng-show="showdownload" style="background:#ccc;padding:20px;" >
       <span class="glyphicon glyphicon-shopping-cart" style="color:#E50043;" ></span>
        <span style="cursor:pointer;text-decoration:underline;" ng-click="showCart()" ng-bind="showcart" >Show Cart</span>
       <span ng-bind="countRiSources"></span>
       <div id="download_selected" ng-show="download_selected">
            <ul>
                <li ng-repeat="items in risourcesModel">{{items.get_headlines}}&nbsp;&nbsp;<a href="" ng-click="deleteItem(items.ID,items.ris_ID)">x</a></li>
            </ul>
           <button class="btn btn-success" ng-show="download_selected" id="download_selected" ng-if="risourcesModel.length>0">
               Download Selected
           </button>
       </div>
    </div>
    <section class="comms_grids" id="comms_list" ng-repeat="resources in resourcesData" ng-if="grid=='grid=1'" style="display:inline-block;width:25%;">
        <div id="listings" ng-if="resources.status=='download'">
            <a id="grid_title" target="_blank" href="/attachments/risources/{{resources.ris_link}}" ng-if="resources.ris_headline.length < 20" title="{{resources.ris_headline}}">{{resources.ris_headline}}</a>
            <a id="grid_title" target="_blank" href="/attachments/risources/{{resources.ris_link}}" ng-if="resources.ris_headline.length > 20" title="{{resources.ris_headline}}">{{resources.ris_headline| limitTo:20}} ...</a>
            <img src="/attachments/risources/displayImage/{{resources.displayimage}}" id="header_img" alt="Presentations" title="Presentations">
            <div id="grid_text">
                <span> {{resources.file_type}}</span>
                <span> {{resources.file_size}} KB</span>
                <span> {{resources.Date_created}}</span>
                <a id="list_file_size" target="_blank" href="/attachments/risources/{{resources.ris_link}}" class="btn btn-primary btn-sm glyphicon glyphicon-download-alt"> Download</a>
                <button id="{{resources.ris_ID}}" type="button" class="addtodownloads btn glyphicon glyphicon-ok" ng-click="showdownloads(resources.ris_ID)" name="riousrceID" ng-if="resources.selected=='yes'">
                    Select
                </button>
                <button id="{{resources.ris_ID}}" type="button" class="addtodownloads btn" ng-click="showdownloads(resources.ris_ID)" name="riousrceID" ng-if="resources.selected!='yes'">
                    Select
                </button>                
            </div>
        </div>
        <div id="listings" ng-if="resources.status=='link'">
            <a id="grid_title" target="_blank" href="{{resources.ris_link}}" title="{{resources.ris_headline}}" ng-if="resources.ris_headline.length < 20">{{resources.ris_headline}}</a>
            <a id="grid_title" target="_blank" href="{{resources.ris_link}}" title="{{resources.ris_headline}}" ng-if="resources.ris_headline.length > 20">{{resources.ris_headline | limitTo:20}} ...</a>
            <img src="/attachments/risources/displayImage/{{resources.displayimage}}" id="header_img" alt="Presentations" title="Presentations">
            <div id="grid_text">
                <span> {{resources.Date_created}}</span>
                <a id="list_file_size" target="_blank" href="{{resources.ris_link}}" class="btn btn-primary btn-sm glyphicon glyphicon-download-alt"> Link</a>
            </div>
        </div>
    </section>

    <section class="comms_list" id="comms_list" ng-repeat="resources in resourcesData" ng-if="grid!='grid=1'">
        <div id="listings" ng-if="resources.status=='download'">
            <a id="grid_title" target="_blank" href="/attachments/risources/{{resources.ris_link}}" title="{{resources.ris_headline}}">{{resources.ris_headline}}</a>
            <img src="/attachments/risources/displayImage/{{resources.displayimage}}" id="header_img" alt="Presentations" title="Presentations">
            <div id="list_text">
                <span> {{resources.file_type}}</span>
                <span> {{resources.file_size}} KB</span>
                <span> {{resources.Date_created}}</span>
                <a id="list_file_size" target="_blank" href="/attachments/risources/{{resources.ris_link}}" class="btn btn-primary btn-sm glyphicon glyphicon-download-alt"> Download</a>
                <button id="{{resources.ris_ID}}" type="button" class="addtodownloads btn glyphicon glyphicon-ok" ng-click="showdownloads(resources.ris_ID)" name="riousrceID" ng-if="resources.selected=='yes'">
                    Select
                </button>
                <button id="{{resources.ris_ID}}" type="button" class="addtodownloads btn" ng-click="showdownloads(resources.ris_ID)" name="riousrceID" ng-if="resources.selected!='yes'">
                    Select
                </button>                   
            </div>
        </div>
        <div id="listings" ng-if="resources.status=='link'">
            <a id="grid_title" target="_blank" href="{{resources.ris_link}}" title="{{resources.ris_headline}}">{{resources.ris_headline}}</a>
            <img src="/attachments/risources/displayImage/{{resources.displayimage}}" id="header_img" alt="Presentations" title="Presentations">
            <div id="list_text">
                <span> {{resources.Date_created}}</span>
                <a id="list_file_size" target="_blank" href="{{resources.ris_link}}" class="btn btn-primary btn-sm glyphicon glyphicon-download-alt"> Link</a>
            </div>
        </div>
    </section>
</form>