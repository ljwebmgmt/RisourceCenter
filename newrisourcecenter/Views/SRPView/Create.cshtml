                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.cccType, Model.list_cccType, new { @class = "form-control" })
                            </td>
                            <td><div onclick="deleteitem(0); return false;" class="btn btn-primary">-</div></td>
                        </tr>
                    </tbody>
                </table>

                <div class="form-group" style="border:solid silver 1px;width:100%;padding:40px;margin-left:5px;">
                    @Html.LabelFor(model => model.uploadinvoice, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        <input type="file" multiple name="uploadinvoice" />
                    </div>
                </div>
            </div>

        </div>

        <br clear="all" />
        <hr style="background:red !important;" />

        <input name="n1_name" type="hidden" value="@Request.QueryString["n1_name"]" />
        <input name="n2_name" type="hidden" value="@Request.QueryString["n2_name"]" />
        <input name="compID" type="hidden" value="@companyId" />

