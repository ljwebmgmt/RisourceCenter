                @Html.DropDownListFor(model => model.requestType, Model.list_requestType, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.requestType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.paymentMethod, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.paymentMethod, Model.list_paymentMethod, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.paymentMethod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.region, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="region" name="region"></select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="title">Description: </label>
            <textarea class="form-control" name="description" id="description" style="height:300px;width:70%;" placeholder="Be Detailed in your explanation: This activity will take place on 05/07/16, we will take out engineers from XYZ Pharmaceuticals to dinner at Ruth Chris Steakhouse then to a Bulls game.

Would like to request $800 for dinner and $1000 for the Bulls game that will include suite tickets, food, and drinks.

Total $1,800.

Potential enclosure and climate business could be the result as they build a new location in Rockford, IL.

Rittal attendees include: John Smith and Jane Jones.

Distributors attending will include (2) reps from Chicago Electrical."></textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estimatedCost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group col-md-10">
                <div class="input-group-addon">$</div>
                @Html.EditorFor(model => model.estimatedCost, new { htmlAttributes = new { @style="width:150px;", @placeholder="Amount" } })
                @Html.ValidationMessageFor(model => model.estimatedCost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.activitydate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.activitydate, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.activitydate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="border:solid silver 1px;width:100%;padding:40px;margin-left:5px;">
            @Html.LabelFor(model => model.fileupload, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                <input type="file" multiple name="fileupload" />
            </div>
        </div>

        <div id="purchaseRequest" style="display:none;">
            <div class="form-group">
                @Html.LabelFor(model => model.supplier, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.supplier, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.supplier, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.supplierNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.supplierNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.supplierNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.shipTo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.shipTo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.shipTo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.shiptoAttn, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.shiptoAttn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.shiptoAttn, "", new { @class = "text-danger" })
                </div>
            </div>

            <hr style="background:red !important;" />

            <div style="background-color:silver;padding:20px;">
                <table class="table">
                    <tr><td colspan="8" align="right"><div onclick="additem(); return false;" class="btn btn-primary">+ Add a row</div></td></tr>
                    <tr>
                        <th>
                            Item
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Delivery Date
                        </th>
                        <th>
                            Unit Price
                        </th>
                        <th>
                            Total Price
                        </th>
                        <th>
                            Chart of Accounts
                        </th>
                        <th>
                            Cost Center
                        </th>
                        <td></td>
                    </tr>
                    <tbody id="add_items">
                        <tr id="0" class="item_list_0">
                            <td>
                                0
                            </td>
                            <td>
                                <textarea class="form-control" id="partNumberOrdescription" name="partNumberOrdescription" style="width:200px;"></textarea>
                            </td>
                            <td>
                                <input class="form-control text-box single-line" id="quantity_0" name="quantity" onkeyup="calculatePrice(0);" type="text" value="" />
                            </td>
                            <td>
                                <input class="form-control text-box single-line date-picker" id="deliveryDate" name="deliveryDate" type="text" value="" />
                            </td>
                            <td>
