@model newrisourcecenter.Models.SRPViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    long userId = Convert.ToInt64(Session["userId"]);
}
<style>
    .showlogs {
        display: none;
    }
</style>
<script>
    $(document).ready(function () {
        var status = "@Model.status"; user = "@userId";statustext = $("#statustext");procurement = $("#procurement");supervisor = $("#supervisor");accounting = $("#accounting"),paymentMethod=$("#paymentMethod"),supplier=$("#supplier"),shipTo=$("#shipTo"),shiptoAttn=$("#shiptoAttn");
        $("form").submit(function (e) {
            if ($("#uploadinvo").is(":visible"))
            {
                if("@Model.status"==="Invoice Needed"){
                    if ($('input[name="InvoiceAmountIsEqual"]').is(":checked")==false) {
                        alert("Is the invoice amount the same as the estimated cost? Check one of the boxes before you submit the invoice.");
                        e.preventDefault();
                    }else if ($("#uploadinvo").val() == "" ) {
                        alert("Upload an invoice");
                        e.preventDefault();
                    }
                }
            }

            if (paymentMethod.val() == "1") {
                if (supplier.val()=="") {
                    alert("The supplier field is required");
                    e.preventDefault();
                } else if (shipTo.val()=="") {
                    alert("The ship to field is required");
                    e.preventDefault();
                } else if (shiptoAttn.val() == "") {
                    alert("The ship to attention field is required");
                    e.preventDefault();
                }
            }
        });

        additem = function () {
            var id = $("#add_items tr:last").attr('id');
            if (!id) {
                var newid = 0;
            } else {
                var newid = parseInt(id) + 1;
            }
            $("#add_items").append('<tr id="' + newid + '" class="item_list_' + newid + '" >' +
            '<td>' +
                newid +
            '</td>'+
            '<td>' +
                '<textarea class="form-control" id="partNumberOrdescription" name="partNumberOrdescription" style="width:200px;"></textarea>'+
                '<span class="field-validation-valid text-danger" data-valmsg-for="partNumberOrdescription" data-valmsg-replace="true"></span>'+
            '</td>'+
            '<td>' +
                '<input class="form-control text-box single-line" id="quantity_' + newid + '" name="quantity" onkeyup="calculatePrice(' + newid + ');"  type="text" value="">' +
                '<span class="field-validation-valid text-danger" data-valmsg-for="quantity" data-valmsg-replace="true"></span>'+
            '</td>' +
            '<td>' +
                '<input class="form-control text-box single-line date-picker" id="deliveryDate" name="deliveryDate" type="text" value="">' +
                '<span class="field-validation-valid text-danger" data-valmsg-for="deliveryDate" data-valmsg-replace="true"></span>' +
            '</td>' +
            '<td>' +
                '<input class="form-control text-box single-line" id="unitPrice_' + newid + '" name="unitPrice" onkeyup="calculatePrice(' + newid + ');"  type="text" value="">' +
                '<span class="field-validation-valid text-danger" data-valmsg-for="unitPrice" data-valmsg-replace="true"></span>'+
            '</td>'+
            '<td>' +
                '<input class="form-control text-box single-line" id="totalPrice_' + newid + '" name="totalPrice" type="text" value="">' +
                '<span class="field-validation-valid text-danger" data-valmsg-for="totalPrice" data-valmsg-replace="true"></span>'+
            '</td>'+
            '<td id="actitemDropdownPlace_' + newid + '" ></td>' +
            '<td id="cccitemDropdownPlace_' + newid + '" ></td>' +
            '<td><div onclick="deleteitem(' + newid + '); return false;" class="btn btn-primary">-</div></td>' +
            '</tr>');
            //implement data picker
            $(".date-picker").datepicker();
            $("#actitemDropdownPlace_" + newid).html($("#actitemDropdown").html());
            $("#cccitemDropdownPlace_" + newid).html($("#cccitemDropdown").html());
        }
        deleteitem = function (id) {
            $(".item_list_" + id).remove();
        }
        showlogs = function(){
            $("#tablelogs").toggleClass("showlogs");
            var link = "/SRPView/LogTable/?id=" +@Model.FormID;
            $("#tablelogs").html("loading...");

            $.post(link, function (logs) {
                $("#tablelogs").html(logs);
            });
        }

        ///Actions taken by supervisor
        if (status === "Pending" && "@ViewBag.isbuyer" == 0 || status=="Amount Updated" && "@ViewBag.isbuyer" == 0)
        {
            $("#managestatusSupervisor").html("<select class=\"form-control\" onChange=\"changeStatusSupervisor(this.value);\" >" +
                                    "<option value=\"supervisor\">Change the Status</option>" +
                                    "<option value=\"Approved\">Approve</option>" +
                                    "<option value=\"Additional Information\">Additional Information</option>" +
                                    "<option value=\"Denied\">Denied</option>" +
                                    "</select>");

        }
        changeStatusSupervisor = function (value) {
            $("#managestatusSupervisor").hide("slow");
            if (value === "Approved")
            {
                $("#statustext").html("<span style=\"color:blue;\">chaning the status...</span>");
                $.post("/SRPView/StatusSupervisor/?formid=" +@Model.FormID +"&status=Approved&department=" +@Model.department +"&postComment=false", function (result) {
                    statustext.html("The status has been changed to approved");
                });
                supervisor.remove();
            }
            else if (value === "Denied")
            {
                $("#statustext").html("<span style=\"color:blue;\">chaning the status...</span>");
                $.post("/SRPView/StatusSupervisor/?formid=" +@Model.FormID +"&status=Denied&department=" +@Model.department +"&postComment=false", function (result) {
                    statustext.html("The status has been changed to denied");
                });
                supervisor.remove();
            }
            else if (value === "Additional Information")
            {
                $("#managestatusAdditionalSupervisor").html(
                    "<br /><br /><span id=\"supervisor\" ><textarea name=\"comment\" id=\"commentSupervisor\" style=\"width:300px;\" rows=\"10\" placeholder=\"You may type in the additional information in a list. For instance" +
                    "1) provide images"+
                    "2) proved a receipt"+
                    "3) or other related documents...\"></textarea>"+
                    "<br />"+
                    "<input type=\"button\" value=\"Update Status\" onClick=\"submitAdditionalSupervisor();\" /></span>"
                    );
            }
        }
        submitAdditionalSupervisor = function () {
            statustext.html("<span style=\"color:blue;\">chaning the status...</span>");
            $("#managestatusAdditionalSupervisor").hide();

            var commentSupervisor = $("#commentSupervisor").val();
            $.post("/SRPView/StatusSupervisor/update_status?formid=" +@Model.FormID +"&status=Additional+Information&department=" +@Model.department +"&postComment=true&comment="+commentSupervisor, function (result) {
                statustext.html("The status has been changed to provide additional information");
                supervisor.remove();
            });
        }
        ///End supervisor actions

        //Start action procurement
        if ("@ViewBag.isbuyer" == 1 || user === "18127") {
            if (status === "Approved" || status === "Additional Information-Procurement") {
                $("#managestatusProcurement").html("<select class=\"form-control\" onChange=\"changeStatusProcurement(this.value);\" >" +
                                        "<option value=\"supervisor\">Assign a PO to the request</option>" +
                                        "<option value=\"Approved\">Approve</option>" +
                                        "<option value=\"Additional Information\">Additional Information</option>" +
                                        "<option value=\"Denied\">Denied</option>" +
                                        "</select>");

            }
        }
        changeStatusProcurement = function (value) {
            $("#managestatusProcurement").hide("slow");

            if (value === "Approved")
            {
                $("#managestatusAdditionalProcurement").html(
                    "<br /><span id=\"procurement\" >"+
                    "<input name=\"comment\" id=\"commentProcurement\" type=\"text\" style=\"width:500px;height:30px;\" rows=\"2\" placeholder=\"Enter PO number\" />" +
                    "<br />" +
                    "<input type=\"button\" value=\"Update Status\" onClick=\"submitPOProcurement();\" /></span>");
            }
            else if (value === "Denied")
            {
                statustext.html("<span style=\"color:blue;\">chaning the status...</span>");

                $.post("/SRPView/StatusProcurment/?formid=" +@Model.FormID +"&status=Denied&department=" +@Model.department +"&postComment=false", function (result) {
                    statustext.html("The status has been changed to denied");
                });
                procurement.remove();
            }
            else if (value === "Additional Information")
            {
                $("#managestatusAdditionalProcurement").html(
                    "<br /><br /><span id=\"procurement\" ><textarea name=\"comment\" id=\"commentProcurement\" style=\"width:300px;\" rows=\"10\" placeholder=\"You may type in the additional information in a list. For instance" +
                    "1) provide images" +
                    "2) proved a receipt" +
                    "3) or other related documents...\"></textarea>" +
                    "<br />" +
                    "<input type=\"button\" value=\"Update Status\" onClick=\"submitAdditionalProcurement();\" /></span>"
                    );
            }
        }
        submitPOProcurement = function () {
            statustext.html("<span style=\"color:blue;\">chaning the status...</span>");
            $("#managestatusAdditionalProcurement").hide();
            var commentProcurement = $("#commentProcurement").val();

            $.post("/SRPView/StatusProcurment?formid=" +@Model.FormID +"&status=Approved&postComment=true&comment=" + commentProcurement, function (result) {
                statustext.html("The status has been changed to approved");
                procurement.remove();
            });
        }
        submitAdditionalProcurement = function () {
            statustext.html("<span style=\"color:blue;\">chaning the status...</span>");
            $("#managestatusAdditionalProcurement").hide();
            var commentProcurement = $("#commentProcurement").val();
            $.post("/SRPView/StatusProcurment?formid=" +@Model.FormID +"&status=Additional+Information&department=" +@Model.department +"&postComment=true&comment=" + commentProcurement, function (result) {
                statustext.html("The status has been changed to provide additional information");
                procurement.remove();
            });
        }
        //End action procurement

        //Start action Accounting
        if (status === "PO Assigned" || status === "Invoice Submitted" || status === "Additional Information-Accounting")
        {
            $("#managestatusAccounting").html("<select class=\"form-control\" onChange=\"changeStatusAccounting(this.value);\" >" +
                                    "<option value=\"accounting\">Change the Status</option>" +
                                    "<option value=\"Completed\">Complete</option>" +
                                    "<option value=\"Additional Information\">Additional Information</option>" +
                                    "<option value=\"Denied\">Denied</option>" +
                                    "</select>");

        }
        changeStatusAccounting = function (value) {
            $("#managestatusAccounting").hide("slow");

            if (value === "Completed")
            {
                statustext.html("<span style=\"color:blue;\">chaning the status...</span>");

                $.post("/SRPView/StatusAccounting/?formid=" +@Model.FormID +"&status=Completed&department=" +@Model.department +"&postComment=false", function (result) {
                    statustext.html("The status has been changed to completed");
                });
                accounting.remove();
            }
            else if (value === "Denied")
            {
                statustext.html("<span style=\"color:blue;\">chaning the status...</span>");

                $.post("/SRPView/StatusAccounting/?formid=" +@Model.FormID +"&status=Denied&department=" +@Model.department +"&postComment=false", function (result) {
                    statustext.html("The status has been changed to denied");
                });
                accounting.remove();
            }
            else if (value === "Additional Information")
            {
                $("#managestatusAdditionalAccounting").html(
                    "<br /><br /><span id=\"accounting\" ><textarea name=\"comment\" id=\"commentAccounting\" style=\"width:300px;\" rows=\"10\" placeholder=\"You may type in the additional information in a list. For instance" +
                    "1) provide images"+
                    "2) proved a receipt"+
                    "3) or other related documents...\"></textarea>"+
                    "<br />"+
                    "<input type=\"button\" value=\"Update Status\" onClick=\"submitAdditionalAccounting();\" /></span>"
                    );
            }
        }
        submitAdditionalAccounting = function () {
            statustext.html("<span style=\"color:blue;\">chaning the status...</span>");
            $("#managestatusAdditionalAccounting").hide();

            var commentAccounting = $("#commentAccounting").val();
            $.post("/SRPView/StatusAccounting/update_status?formid=" +@Model.FormID +"&status=Additional+Information&department=" +@Model.department +"&postComment=true&comment=" + commentAccounting, function (result) {
                statustext.html("The status has been changed to provide additional information");
                accounting.remove();
            });
        }
        //End action Accounting

        calculatePrice = function (id) {
            var unitPrice = $("#unitPrice_" + id).val();
            var quantity = $("#quantity_" + id).val();
            var total = parseInt(quantity) * parseInt(unitPrice);
            if($.isNumeric(parseInt(total))){
                $("#totalPrice_" + id).val(total);
            }else{
                $("#totalPrice_" + id).val(0);
            }
        }
        $('select[name="department"]').change(function () {
            $("#region").empty();
            var selectedval = $("#department").val();
            var getloc = "/SRPView/GetRigionalManager/?id=" + selectedval;
            $.post(getloc, function (data) {
                $.each(data, function (key, value) {
                    if (value.ID == "@Model.region") {
                        $("#region").append("<option value=\"" + value.ID + "\" Selected >" + value.RegionName + "</option>");
                    }else{
                        $("#region").append("<option value=\"" + value.ID + "\">" + value.RegionName + "</option>");
                    }
                });
            });
        }).change();
        $('select[name="paymentMethod"]').change(function () {
            if ($(this).val() == "0") {
                $('#purchaseRequest').hide();
            } else {
                $('#purchaseRequest').show();
            }
        }).change();
    });
</script>

