                                <span class="field-validation-valid text-danger" data-valmsg-for="deliveryDate" data-valmsg-replace="true"></span>
                            </td>
                            <td>
                                <input class="form-control text-box single-line" id="unitPrice_@m" onKeyup="calculatePrice(@m);" name="unitPrice" type="text" value="@Model.list_additional_info.FirstOrDefault().unitPrice.Split(',')[m]">
                                <span class="field-validation-valid text-danger" data-valmsg-for="unitPrice" data-valmsg-replace="true"></span>
                            </td>
                            <td>
                                <input class="form-control text-box single-line" id="totalPrice_@m" name="totalPrice" type="text" value="@Model.list_additional_info.FirstOrDefault().totalPrice.Split(',')[m]">
                                <span class="field-validation-valid text-danger" data-valmsg-for="totalPrice" data-valmsg-replace="true"></span>
                            </td>
                            <td>
                                <select name="achType" class="form-control">
                                    @foreach (var values in @Model.list_achType)
                                    {
                                        if (@Model.list_additional_info.FirstOrDefault().achType.Split(',')[m] == @values.Value)
                                        {
                                            <option value="@values.Value" selected>@values.Text @values.Value</option>
                                        }
                                        else
                                        {
                                            <option value="@values.Value">@values.Text</option>
                                        }
                                    }
                                </select>
                            </td>
                            <td>
                                <select name="cccType" class="form-control">
                                    @foreach (var values in @Model.list_cccType)
                                    {
                                        if (@Model.list_additional_info.FirstOrDefault().cccType.Split(',')[m] == @values.Value)
                                        {
                                            <option selected value="@values.Value">@values.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@values.Value">@values.Text</option>
                                        }
                                    }
                                </select>
                            </td>
                            <td><div onclick="deleteitem(@m); return false;" class="btn btn-primary">-</div></td>
                        </tr>
                        m++;
                    }
                }
            </tbody>
        </table>

