@using newrisourcecenter.Models
@model LoginPartnerPortalViewModel

<article align="center" style="background:#fff;box-shadow: #696969 0 2px 10px 1px;padding:20px;">
    <div valign="top" id="loginForm">
        @using (Html.BeginForm("LoginPartnerPortal", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3 style="color:#E50043;">Rittal Partner Portal</h3>
            <br />
            <span> @Html.ValidationSummary(true, "", new { @class = "text-danger" })</span>
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Enter your email" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <span class="text-danger">IMPORTANT NOTE:</span> Please use your PARTNER PORTAL PASSWORD to access the RiSource Center through this special landing page. We recommend that you DO NOT save the password in your browser if you also access the RiSource Center directly. If you have any questions or concerns, please contact us at <a href="mailto:rittal@rittal.us">rittal@rittal.us</a>.
            </div>
            <div class="form-group checkboxFive">
                <div class="col-md-10">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                    <br />
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-log-in"></span> Log in
                    </button>
                    @*<input type="submit" value="Log in" class="btn btn-primary"  />*@
                    @*&nbsp;@Html.ActionLink("Forgot your password?", "ForgotPassword",  new { @class="btn btn-primary"})*@
                </div>
            </div>
            @*<div style="min-height: 10px;background:black;"></div>
            <br clear="all" />
            <div align="left" style="color: #fff;padding:20px;letter-spacing: none;background:#000;height:80px;font-weight:bolder;">
                Interested in having access to the RiSource Center?
                @Html.ActionLink("Click here", "RegisterTemp", null, htmlAttributes: new { @id = "access_id" })
                to request access.
            </div>*@
        }
    </div>
   
</article>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


