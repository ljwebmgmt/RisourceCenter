    @{
        bool isPinnacle = Convert.ToBoolean(Session["isPinnacleUser"]);
        string Notlogedinstyle = "<div id=\"main\" style=\"margin-top:1%;padding: 70px 10px 10px;border:solid #696969 1px;background: #ffff;height: 90vh;\" >";
        string Registerstyle = "<div id=\"main\" style=\"margin-top:-2%;padding: 70px 10px 10px;border:solid #696969 1px;background: #ffff;height: 90vh;\" >";
        string logedinstyle = "<div id=\"main\" >";

        if (Request.IsAuthenticated)
        {
            @Html.Raw(@logedinstyle);
        }
        else if (Request.RawUrl.Contains("Register"))
        {
            @Html.Raw(@Registerstyle);
        }
        else
        {
            @Html.Raw(@Notlogedinstyle);
        }

        long userId = Convert.ToInt64(Session["userId"]);

        if (!Request.IsAuthenticated || userId == 0)
        {
            Html.RenderPartial("_LoggedOutPartial");
        }
        else
        {
            Html.RenderPartial("_LoggedInPartial");
        }
    }
