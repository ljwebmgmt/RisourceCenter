        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_POS, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="comp_POS" type="radio" value="1">Yes
            <input name="comp_POS" type="radio" value="0">No
            @Html.ValidationMessageFor(model => model.comp_POS, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_SPA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="comp_SPA" type="radio" value="1">Yes
            <input name="comp_SPA" type="radio" value="0">No
            @Html.ValidationMessageFor(model => model.comp_SPA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_project_reg, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
