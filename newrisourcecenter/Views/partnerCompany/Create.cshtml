        @Html.LabelFor(model => model.comp_RiCRM, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="comp_RiCRM" type="radio" value="1">Yes
            <input name="comp_RiCRM" type="radio" value="0">No
            @Html.ValidationMessageFor(model => model.comp_RiCRM, "", new { @class = "text-danger" })
        </div>
    </div>

    <h3>Deal Registration</h3>
    <div class="form-group">
        @Html.LabelFor(model => model.bid_registration, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="bid_registration" type="radio" value="1">Yes
            <input name="bid_registration" type="radio" value="0">No
            @Html.ValidationMessageFor(model => model.bid_registration, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.it_territory_manager, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.it_territory_manager, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.it_territory_manager, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.general_manager, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.general_manager, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.general_manager, "", new { @class = "text-danger" })
        </div>
    </div>

    <input type="hidden" value="@Request.QueryString["n1_name"]" name="n1_name" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { n1_name = Request.QueryString["n1_name"] })
</div>
