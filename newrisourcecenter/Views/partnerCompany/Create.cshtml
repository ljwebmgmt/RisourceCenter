            <input name="comp_project_reg" type="radio" value="0">No
            @Html.ValidationMessageFor(model => model.comp_project_reg, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_FX, htmlAttributes: new { @class = "control-label col-md-2" })
