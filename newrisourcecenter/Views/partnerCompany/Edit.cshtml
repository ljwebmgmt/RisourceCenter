    <h3>Deal Registration</h3>
    <div class="form-group">
        @Html.LabelFor(model => model.bid_registration, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="bid_registration" type="radio" value="1" @(Model.bid_registration == 1 ? "checked" : "")>Yes
            <input name="bid_registration" type="radio" value="0" @(Model.bid_registration == 0 ? "checked" : "")>No
            @Html.ValidationMessageFor(model => model.bid_registration, "", new { @class = "text-danger" })
        </div>
    </div>

