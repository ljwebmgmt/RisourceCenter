    <h3>Company Details</h3>
    <table class="table" border="1">
        <tr>
            <th style="background-color:gray;">Locations</th>
            <td>@Model.count_locations</td>
            <td>
                @Html.ActionLink("Manage Locations", "Index", "partnerLocation", new { comp_id = Model.comp_ID, n1_name = "Admin Partner Location", n2_name = Model.comp_name }, htmlAttributes: new { title = "Manage Locations" })
            </td>
        </tr>
        <tr>
            <th style="background-color:gray;">Users/Contacts</th>
