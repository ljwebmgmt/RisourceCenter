@model newrisourcecenter.Models.partnerCompanyViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int usr_SPA = Convert.ToInt32(Session["usr_SPA"]);//Regional Manager
    int usr_POS = Convert.ToInt32(Session["usr_POS"]);//Account Manager
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <a href="javascript:history.back();" style="float:right;">back</a>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.comp_ID)

    <h3>Company Overview</h3>
    <div class="form-group">
        @Html.LabelFor(model => model.comp_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.comp_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.comp_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_region, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.comp_region, Model.list_regions, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.comp_region, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_active, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="comp_active" class="form-control">
                @if (Model.comp_active == 1)
                {
                    <option value="1" selected>Active</option>
                }
                else
                {
                    <option value="0" selected>Not Active</option>
                }
                <option value="1">Active</option>
                <option value="0">Not Acitive</option>
            </select>
            @Html.ValidationMessageFor(model => model.comp_active, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_industry, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="comp_industry" id="comp_industry" class="form-control">
                <option selected>Select an Industry</option>
                @foreach (var items in Model.list_industry)
                {
                    if (items.pi_ID == Model.comp_industry)
                    {
                        <option value="@items.pi_ID" selected>@items.pi_industry</option>
                    }
                    else
                    {
                        <option value="@items.pi_ID">@items.pi_industry</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_type, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="comp_type" id="comp_type" class="form-control">
                <option selected>Select Company Type</option>
                @foreach (var items in Model.list_Type)
                {
                    if (@items.pt_ID == Model.comp_type)
                    {
                        <option value="@items.pt_ID" selected>@items.pt_type</option>
                    }
                    <option value="@items.pt_ID">@items.pt_type</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_level, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.comp_level, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.comp_level, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_products, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{
                if (Model.comp_products != null)
                {
                    char[] prod = Model.comp_products.ToArray();
                    string prods = new string(prod);
                    foreach (var items in Model.list_products)
                    {
                        if (prods.Contains(Convert.ToString(items.pp_ID)))
                        {
                            <input type="checkbox" name="comp_products" id="comp_products" value="@items.pp_ID" checked />@items.pp_product<br />
                        }
                        else
                        {
                            <input type="checkbox" name="comp_products" id="comp_products" value="@items.pp_ID" />@items.pp_product<br />
                        }
                    }

                }
                else
                {

                    foreach (var items in Model.list_products)
                    {
                        <input type="checkbox" name="comp_products" id="comp_products" value="@items.pp_ID" />@items.pp_product<br />
                    }

                }
            }

            @Html.ValidationMessageFor(model => model.comp_products, "", new { @class = "text-danger" })
        </div>
    </div>
    @if (!User.IsInRole("Channel User"))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.comp_MDF_amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                $@Html.EditorFor(model => model.comp_MDF_amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comp_MDF_amount, "", new { @class = "text-danger" })
            </div>
        </div>
    }
    else
    {
        @Html.HiddenFor(model => model.comp_MDF_amount)
    }


    <div class="form-group">
        @Html.LabelFor(model => model.comp_MDF_oLimit, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
