    <div class="form-group">
        @Html.LabelFor(model => model.MKT_remaining, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            $@Html.DisplayFor(model => model.MKT_remaining, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_dateUpdated, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.comp_dateUpdated, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.comp_updatedBy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.full_name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    @Html.HiddenFor(model => model.comp_dateCreated, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.comp_dateUpdated, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.comp_createdBy, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.comp_updatedBy, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.old_ID, new { htmlAttributes = new { @class = "form-control" } })

    @if (User.IsInRole("Super Admin") || User.IsInRole("Global Admin") || usr_SPA == 1)
    {
        <h3>Company Permissions</h3>
        <div class="form-group">
            @Html.LabelFor(model => model.comp_MDF, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (Model.comp_MDF == 1)
                {
                    <span><input name="comp_MDF" checked type="radio" value="1">Yes</span>
                }
                else
                {
                    <span><input name="comp_MDF" type="radio" value="1">Yes</span>
                }
                @if (Model.comp_MDF == 0)
                {
                    <span><input name="comp_MDF" checked type="radio" value="0">No</span>
                }
                else
                {
                    <span><input name="comp_MDF" type="radio" value="0">No</span>
                }

                @Html.ValidationMessageFor(model => model.comp_MDF, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comp_SAP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (Model.comp_SAP == 1)
                {
