                <div class="col-md-10">
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.transformer_voltage, Model.listVoltage, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.transformer_voltage, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.equipment_options, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.equipment_options, new { htmlAttributes = new { @class = "form-control", @placeholder = "Outside of what is supplied with the stocked BC1008HS machine or what is required for other BC Machine types. Options for each machine can be found in RAS brochure" } })
                    @Html.ValidationMessageFor(model => model.equipment_options, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Quote" name="send" class="btn btn-default" />
            </div>
            <br />
            <br />
            <br />
            <br />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

