@model newrisourcecenter.Models.RFQRASViewModel

@{
    ViewBag.Title = "Create RFQ for RAS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!string.IsNullOrEmpty(@ViewBag.error))
{
    <div class="alert alert-danger">@ViewBag.error</div>
}

@if (!string.IsNullOrEmpty(Request.QueryString["success"]))
{
    <div class="alert alert-success">@Request.QueryString["success"]</div>
}

@using (Html.BeginForm("CreateRAS", "RFQTool", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="details">
            <h3>RFQ Information</h3>
            <div class="form-group">
                @Html.LabelFor(model => model.account_manager, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.account_manager, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.account_manager, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.regional_manager, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.regional_manager, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.regional_manager, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.machine_type, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.machine_type, Model.listMachineTypes, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.machine_type, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.competitor, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.competitor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.competitor, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.opportunity_id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.opportunity_id, new { htmlAttributes = new { @class = "form-control", @Value = @Model.opportunity_id == 0 ? "" : @Model.opportunity_id.ToString() } })
                        @Html.ValidationMessageFor(model => model.opportunity_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.erp_id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.erp_id, new { htmlAttributes = new { @class = "form-control", @Value = @Model.erp_id == 0 ? "" : @Model.erp_id.ToString() } })
                        @Html.ValidationMessageFor(model => model.erp_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <h3>Contact Information</h3>
            <div class="form-group">
                @Html.LabelFor(model => model.company, htmlAttributes: new { @class = "control-label col-md-2" })
