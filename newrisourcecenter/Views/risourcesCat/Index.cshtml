@model IEnumerable<newrisourcecenter.Models.risourcesCatViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Add a RiSource Categories", "Create", new { n1_name=Request.QueryString["n1_name"], msg="Add a RiSource Category"}, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ris_categories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ris_categories)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.cat_id, n1_name = Request.QueryString["n1_name"], msg = item.ris_categories }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.cat_id, n1_name = Request.QueryString["n1_name"] }, htmlAttributes: new { id = "delete", onclick = "deletef(this.href);return false", @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
