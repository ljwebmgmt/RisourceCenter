@model newrisourcecenter.Models.LitRequestedViewModel
<br />
<br />
<table style="border:solid #000 1px;">
    <tr>
        <td colspan="2" style="border:solid #000 1px;font-weight:bolder;">Catalog Type</td>
        <td style="width:40px;"></td>
        <td colspan="1" style="border:solid #000 1px;font-weight:bolder;">Quantity</td>
    </tr>
    @{
        string[] rlit_data = { };

        if (Model.rlit_info != null)
        {
            rlit_data = Model.rlit_info.Split(',');
        }
        foreach (var data in rlit_data)
        {
            string[] rlit = data.Split('|');

                <tr>
                    <td colspan="2" style="border:solid #000 1px;">@rlit[0]</td>
                    <td style="width:40px;"><div></div></td>
                    <td colspan="1" style="border:solid #000 1px;">@rlit[1]</td>
                </tr>
        }

    }
</table>
