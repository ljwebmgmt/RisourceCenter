            }
            <div class="col-md-10">
                @if (@Request.QueryString["parent_id"] != null)
                {
                    <input type="hidden" name="parent_id" value="@Request.QueryString["parent_id"]" class="form-control" />
                }
                else
                {
                    @Html.EditorFor(model => model.parent_id, new { htmlAttributes = new { @class = "form-control" } })
                }
                @Html.ValidationMessageFor(model => model.parent_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @if (@Request.QueryString["columnName"] == null)
            {
                @Html.LabelFor(model => model.column_name, htmlAttributes: new { @class = "control-label col-md-2" })
            }
            <div class="col-md-10">
                @if (@Request.QueryString["columnName"] != null)
                {
                    <input type="hidden" name="column_name" value="@Request.QueryString["columnName"]" class="form-control" />
                }
                else
                {
                    @Html.EditorFor(model => model.column_name, new { htmlAttributes = new { @class = "form-control" } })
                }
