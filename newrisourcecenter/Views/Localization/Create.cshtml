                @Html.TextAreaFor(model => model.message_original, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.message_original, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.message_translated, htmlAttributes: new { @class = "control-label col-md-2" })
